<%- include('includes/head') %>
<%- include('includes/nav') %>
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>

            <div class="col-lg-8 my-3">
                <h1 class="display-1 text-center">Login</h1>
                <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

                <%- include('includes/messages') %>

                <div class="row">
                    <div class="col-lg">
                        <h4>Faça seu cadastro</h4>
                        <p>Se você ainda não tem conta, preencha o formulário abaixo:</p>
                        <form action="/login/register" method="POST">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <div class="form-group my-2">
                              <label for="exampleInputEmail1">Seu email</label>
                              <input type="email" class="form-control" name="email">
                            </div>
                            <div class="form-group my-2">
                              <label for="exampleInputEmail1">Senha</label>
                              <input type="password" class="form-control" name="password">
                            </div>
                            <button type="submit" class="btn btn-primary">Criar conta</button>
                          </form>
                    </div>
                    <div class="col-lg">
                        <h4>Entrar no sistema</h4>
                        <p>Se você já possui uma conta, faça login abaixo</p>
                        <form  action="/login/login" method="POST">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <div class="form-group my-2">
                              <label for="exampleInputEmail1">Seu email</label>
                              <input type="email" class="form-control" name="email">
                            </div>
                            <div class="form-group my-2">
                              <label for="exampleInputEmail1">Senha</label>
                              <input type="password" class="form-control" name="password">
                            </div>
                            <button type="submit" class="btn btn-primary">Entrar</button>
                          </form>
                    </div>
                </div>

            </div>

            <div class="col-lg-2"></div>
        </div>
    </div>
<%- include('includes/footer') %>